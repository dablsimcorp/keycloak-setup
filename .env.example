# Keycloak Configuration Example
# Copy this file to .env and update with your values

# Keycloak hostname (use localhost for local-only, or your machine's IP/domain for network access)
# Examples: localhost, 192.168.1.100, keycloak.yourdomain.com
KC_HOSTNAME=localhost

# Keycloak admin credentials (CHANGE THESE!)
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=changeme

# PostgreSQL credentials (CHANGE THESE!)
POSTGRES_DB=keycloak
POSTGRES_USER=keycloak
POSTGRES_PASSWORD=changeme

# Proxy settings (edge for production behind reverse proxy, none for direct access)
KC_PROXY=edge

# External port (default: 8080)
KC_EXTERNAL_PORT=8080

# Hostname strict mode (disable for development)
KC_HOSTNAME_STRICT=false

# HTTP settings
KC_HTTP_ENABLED=true
KC_HTTP_PORT=8080

# Keycloak realm settings (optional)
KEYCLOAK_REALM=master
KEYCLOAK_CLIENT_ID=keycloak-client
KEYCLOAK_CLIENT_SECRET=changeme

# Nginx ports (when using docker-compose.nginx.yml)
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443
